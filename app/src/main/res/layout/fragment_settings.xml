<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsFragment"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/buttonSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:contentDescription="@string/back"
            android:src="@drawable/home"
            app:layout_constraintBottom_toTopOf="@id/titleSettings"
            app:layout_constraintHorizontal_bias=".03"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias=".07"
            app:layout_constraintVertical_chainStyle="packed"
            android:layout_marginBottom="25dp"/>

        <TextView
            android:id="@+id/titleSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/archivo_black"
            android:text="Settings"
            android:textColor="#000000"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@id/contentSettings"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/buttonSettings"
            android:layout_marginBottom="30dp"/>
        <TextView
            android:id="@+id/contentSettings"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="SubLearn has been created to increase awareness of crash statistics, specific to Victoria. SubLearn draws its statistical analysis from a dataset provided by Data Vic."
            android:fontFamily="sans-serif"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/titleSettings"
            app:layout_constraintBottom_toTopOf="@id/buttonSettings2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="40dp"/>
        <Button
            android:id="@+id/buttonSettings2"
            android:layout_width="174dp"
            android:layout_height="66dp"
            android:text="@string/log_out"
            android:textSize="20sp"
            android:textColor="#FFF72F"
            app:backgroundTint="#000000"
            app:layout_constraintBottom_toTopOf="@id/imageSettings"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/contentSettings"
            android:layout_marginBottom="100dp"/>

        <ImageView
            android:id="@+id/imageSettings"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/bye"
            tools:layout_editor_absoluteX="55dp"
            tools:layout_editor_absoluteY="371dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/buttonSettings2"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>